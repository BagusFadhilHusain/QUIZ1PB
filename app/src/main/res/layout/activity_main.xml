<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="BAGUS FADHIL HUSAIN               QUIZ 1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#EDB9F6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etNama"
        android:hint="Nama"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTipe"
        android:text="Tipe Member"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="15dp"
        android:layout_width="155dp"
        android:layout_height="wrap_content" />


    <RadioGroup
        android:id="@+id/rgMembership"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbGold"
            android:text="Gold"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_width="155dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbSilver"
            android:text="Silver"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_width="155dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbBiasa"
            android:text="Biasa"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_width="155dp"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <EditText
        android:id="@+id/etKodeBarang"
        android:hint="Kode Barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etJumlahBarang"
        android:hint="Jumlah Barang"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnProses"
        android:text="Proses"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />


</LinearLayout>